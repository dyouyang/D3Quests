<resources>

    <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Ros light theme, colors are black, white, and #2e5e6f -->
        <style name="Theme.Ros" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_ros</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Ros</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ros</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Ros</item>
        <item name="android:actionBarTabTextStyle">@style/MyActionBarTabText</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Ros</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Ros</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_ros</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_ros</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Ros</item>
        
                <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Ros.Widget</item>

    </style>

    <style name="ActionBar.Solid.Ros" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/ab_solid_ros</item>
        <item name="android:backgroundStacked">@color/tab_background</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_ros</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ros</item>
    </style>

    <style name="ActionBar.Transparent.Ros" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_ros</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Ros</item>
    </style>

    <style name="PopupMenu.Ros" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ros</item>	
    </style>

    <style name="DropDownListView.Ros" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_ros</item>
    </style>

    <style name="ActionBarTabStyle.Ros" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_ros</item>
    </style>

    <style name="MyActionBarTabText"
           parent="@android:style/Widget.Holo.ActionBar.TabText">
        <item name="android:textColor">@color/actionbartab_text</item>
    </style>
    
    <style name="DropDownNav.Ros" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_ros</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_ros</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_ros</item>
    </style>
    
    <style name="ProgressBar.Ros" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_ros</item>
    </style>
    
    <style name="ActionButton.CloseMode.Ros" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_ros</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Ros.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Ros</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Ros</item>
    </style>
    
</resources>
